{
    "$id": "https://jijejo/jijejo.out.schema.json?version=v1.0.0",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "json *out* for jijejo",
    "type": "object",
    "required": [
        "meta",
        "iserr",
        "isout",
        "err"
    ],
    "properties": {
        "meta": {
            "type": "object",
            "default": {},
            "description": "free meta data like language, .out schema information ..."
        },
        "iserr": {
            "type": "boolean",
            "const": false,
            "default": false
        },
        "isout": {
            "type": "boolean",
            "const": true,
            "default": true
        },
        "out": {
            "default": {},
            "description": "classic out payload, accept any type"
        }
    }
}