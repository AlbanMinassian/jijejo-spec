{
    "$id": "https://jijejo/v1.0.0/jijejo.err.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "json *err* for jijejo",
    "type": "object",
    "required": [
        "isout",
        "iserr",
        "err"
    ],
    "properties": {
        "isout": {
            "type": "boolean",
            "const": false,
            "default": false
        },
        "iserr": {
            "type": "boolean",
            "const": true,
            "default": true
        },
        "err": {
            "default": {},
            "description": "classic error payload, accept any type"
        }
    }
}